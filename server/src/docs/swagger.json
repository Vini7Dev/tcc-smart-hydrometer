{
  "openapi": "3.0.0",
  "info": {
    "title": "Hidrômetro Inteligente - Backend",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333/v1",
      "description": "LOCAL HOST"
    }
  ],
  "paths": {
    "/admins": {
      "post": {
        "summary": "Cadastrar Administrador",
        "description": "Essa rota é responsável por cadastrar um administrador",
        "tags": ["Administradores"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "User isn't admin!"
          },
          "400": {
            "description": "Email already exists!"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/responses/schemas/CreatedUser"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "avatar_file": {
            "type": "file",
            "format": "binary"
          }
        }
      }
    }
  },
  "responses": {
    "schemas": {
      "CreatedUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "avatar_file": {
            "type": "string"
          },
          "account_type": {
            "type": "string"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
